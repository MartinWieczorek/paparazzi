<!DOCTYPE module SYSTEM "module.dtd">

<module name="virt_baro_ir_adc" dir="sensors">
  <doc>
    <description>
      Virtual barometer fed by a distance sensor looking towards ground.
      Sends the BARO_ABS ABI message with the current height converted to absolute pressure.
    </description>
  </doc>

  <header>
    <file name="virt_baro_ir_adc.h"/>
  </header>
  <init fun="virt_baro_ir_adc_init()"/>
  <periodic fun="virt_baro_ir_adc_periodic()" freq="10."/>

  <makefile target="ap">
    <file name="virt_baro_ir_adc.c"/>
    <define name="USE_BARO_BOARD" value="FALSE"/>
    <define name="ADC_CHANNEL_IR" value="3"/>
  </makefile>

</module>
