<!DOCTYPE module SYSTEM "module.dtd">

<module name="kalman">
  <doc>
    <description>Kalman-filter for position, velocity, acceleration estimation in x, y, z directions</description>
  </doc>
  <header>
    <file name="kalman.h"/>
  </header>
  <init fun="kalman_init()"/>
  <periodic fun="predict()" freq="15" />
  <periodic fun="correct()" freq="15" />
  <makefile>
    <file name="kalman.c"/>
        <!-- Definition to store prediction frequency. Please set it to the same value as freq of predict() -->
        <define name="KALMAN_PREDICTION_FREQ"          value="15.0" />
	<file name="/libfixkalman/fixkalman.c"/>
	<file name="/libfixmatrix/fixmatrix.c"/>
	<file name="/libfixmatrix/fixarray.c"/>
	<file name="/libfixmath/fix16.c"/>
	<file name="/libfixmath/fix16_sqrt.c"/>
	<file name="/libfixmath/fix16_trig.c"/>
  </makefile>
</module>

